@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato @Model.Nome?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary" asp-controller="Contato" asp-action="Index"> Cancelar exclusão</a>
    <a class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id"> Confirmar exclusão</a>
</div>